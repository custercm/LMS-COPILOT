{
  "name": "lms-copilot",
  "displayName": "LMS Copilot",
  "description": "GitHub Copilot-style AI assistant powered by LM Studio",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "browser": "./dist/webview/webview.js",
  "contributes": {
    "viewsContainers": {
      "panel": [
        {
          "id": "lmsCopilotContainer",
          "title": "LMS Copilot",
          "icon": "$(robot)"
        }
      ]
    },
    "views": {
      "lmsCopilotContainer": [
        {
          "type": "webview",
          "id": "lmsCopilotChat",
          "name": "LMS Copilot Chat"
        }
      ]
    },
    "commands": [
      {
        "command": "lms-copilot.startChat",
        "title": "LMS Copilot: Start Chat",
        "category": "LMS Copilot"
      },
      {
        "command": "lms-copilot.togglePanel",
        "title": "Toggle LMS Copilot Panel",
        "category": "LMS Copilot"
      }
    ],
    "configuration": {
      "title": "LMS Copilot",
      "properties": {
        "lmsCopilot.endpoint": {
          "type": "string",
          "default": "http://localhost:1234",
          "description": "LM Studio API endpoint"
        },
        "lmsCopilot.model": {
          "type": "string",
          "default": "llama3",
          "description": "Default AI model to use"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "package": "webpack --mode production && webpack --config webpack.webview.config.js --mode production",
    "dev": "webpack --mode development && webpack --config webpack.webview.config.js --mode development",
    "watch:webview": "webpack --config webpack.webview.config.js --mode development --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "test:e2e": "jest --testPathPattern=e2e",
    "pretest": "npm run compile"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/diff": "^5.0.0",
    "@types/jest": "^29.5.8",
    "@types/marked": "^5.0.0",
    "@types/node": "16.x",
    "@types/prismjs": "^1.26.5",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/vscode": "^1.80.0",
    "css-loader": "^6.8.1",
    "html-webpack-plugin": "^5.5.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.0",
    "typescript": "^5.0.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.6.0",
    "axios": "^1.6.0",
    "diff": "^5.1.0",
    "highlight.js": "^11.9.0",
    "marked": "^5.1.2",
    "prismjs": "^1.29.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
