{
  "name": "lms-copilot",
  "displayName": "LMS Copilot",
  "description": "GitHub Copilot replica powered by local LM Studio AI - complete privacy and control",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "AI",
    "Chat",
    "Machine Learning"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onLanguage"
  ],
  "main": "./dist/extension.js",
  "browser": "./dist/webview/webview.js",
  "contributes": {
    "viewsContainers": {
      "panel": [
        {
          "id": "lmsCopilotContainer",
          "title": "LMS Copilot",
          "icon": "$(robot)"
        }
      ]
    },
    "views": {
      "lmsCopilotContainer": [
        {
          "type": "webview",
          "id": "lmsCopilotChat",
          "name": "LMS Copilot Chat"
        }
      ]
    },
    "commands": [
      {
        "command": "lms-copilot.startChat",
        "title": "LMS Copilot: Start Chat",
        "category": "LMS Copilot"
      },
      {
        "command": "lms-copilot.togglePanel",
        "title": "Toggle LMS Copilot Panel",
        "category": "LMS Copilot"
      },
      {
        "command": "lms-copilot.enableCompletions",
        "title": "Enable AI Code Completions",
        "category": "LMS Copilot"
      },
      {
        "command": "lms-copilot.disableCompletions",
        "title": "Disable AI Code Completions",
        "category": "LMS Copilot"
      },
      {
        "command": "lms-copilot.clearCompletionCache",
        "title": "Clear Completion Cache",
        "category": "LMS Copilot"
      },
      {
        "command": "lms-copilot.showCacheStats",
        "title": "Show Completion Cache Statistics",
        "category": "LMS Copilot"
      },
      {
        "command": "lms-copilot.testModels",
        "title": "Test Model Management",
        "category": "LMS Copilot"
      },
      {
        "command": "lms-copilot.switchPanelPosition",
        "title": "Switch Panel Position",
        "category": "LMS Copilot"
      },
      {
        "command": "lms-copilot.toggleTheme",
        "title": "Toggle Panel Theme",
        "category": "LMS Copilot"
      }
    ],
    "configuration": {
      "title": "LMS Copilot",
      "properties": {
        "lmsCopilot.endpoint": {
          "type": "string",
          "default": "http://localhost:1234",
          "description": "LM Studio API endpoint"
        },
        "lmsCopilot.model": {
          "type": "string",
          "default": "llama3",
          "description": "Default AI model to use"
        },
        "lmsCopilot.securityLevel": {
          "type": "string",
          "enum": [
            "disabled",
            "minimal",
            "standard",
            "strict"
          ],
          "default": "minimal",
          "description": "Security level for the extension",
          "enumDescriptions": [
            "No security (fastest, personal use only)",
            "Basic protection (recommended for personal use)",
            "Moderate security (team use)",
            "Full security (enterprise/public use)"
          ]
        },
        "lmsCopilot.allowDangerousCommands": {
          "type": "boolean",
          "default": false,
          "description": "Allow potentially dangerous terminal commands (only enable if you trust the AI model completely)"
        },
        "lmsCopilot.enableCompletions": {
          "type": "boolean",
          "default": true,
          "description": "Enable AI-powered code completions"
        },
        "lmsCopilot.completionDelay": {
          "type": "number",
          "default": 300,
          "description": "Delay in milliseconds before showing completions"
        },
        "lmsCopilot.completionMaxLength": {
          "type": "number",
          "default": 200,
          "description": "Maximum length of completion suggestions"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "package": "webpack --mode production && webpack --config webpack.webview.config.js --mode production",
    "dev": "webpack --mode development && webpack --config webpack.webview.config.js --mode development",
    "watch:webview": "webpack --config webpack.webview.config.js --mode development --watch",
    "test": "jest --testPathIgnorePatterns=/dist/ --testPathIgnorePatterns=\\.d\\.ts$",
    "test:watch": "jest --watch --testPathIgnorePatterns=/dist/ --testPathIgnorePatterns=\\.d\\.ts$",
    "test:coverage": "jest --coverage --testPathIgnorePatterns=/dist/ --testPathIgnorePatterns=\\.d\\.ts$",
    "test:integration": "jest --testPathPattern=integration --testPathIgnorePatterns=/dist/ --testPathIgnorePatterns=\\.d\\.ts$",
    "test:unit": "jest --testPathPattern=unit --testPathIgnorePatterns=/dist/ --testPathIgnorePatterns=\\.d\\.ts$",
    "test:e2e": "jest --testPathPattern=e2e --testPathIgnorePatterns=/dist/ --testPathIgnorePatterns=\\.d\\.ts$",
    "pretest": "npm run compile"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/diff": "^5.0.0",
    "@types/jest": "^29.5.8",
    "@types/marked": "^5.0.0",
    "@types/node": "16.x",
    "@types/prismjs": "^1.26.5",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/vscode": "^1.80.0",
    "babel-jest": "^30.0.5",
    "css-loader": "^6.8.1",
    "html-webpack-plugin": "^5.5.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.0",
    "typescript": "^5.0.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.6.0",
    "axios": "^1.6.0",
    "diff": "^5.1.0",
    "highlight.js": "^11.9.0",
    "marked": "^5.1.2",
    "prismjs": "^1.29.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
